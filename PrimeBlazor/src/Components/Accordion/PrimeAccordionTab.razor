@namespace PrimeBlazor

@code {

    [CascadingParameter]
    private PrimeAccordion Parent { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string HeaderText { get; set; }

    [Parameter]
    public RenderFragment Header { get; set; }
    [Parameter]
    public bool Disabled { get; set; }

    protected override void OnInitialized()
    {
        if (Parent == null)
        {
            throw new ArgumentNullException(nameof(Parent), "TabPanel must be located inside a TabView");
        }
        base.OnInitialized();
        Parent.AddTab(this);
    }
}