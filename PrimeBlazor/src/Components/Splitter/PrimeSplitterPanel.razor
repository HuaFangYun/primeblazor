@namespace PrimeBlazor

@code {
    [CascadingParameter]
    internal PrimeSplitter Parent { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string CssClass { get; set; }
    [Parameter]
    public int? Size { get; set; } = null;
    [Parameter]
    public int? MinSize { get; set; } = null;
    protected override void OnInitialized()
    {
        if (Parent == null)
        {
            throw new ArgumentNullException(nameof(Parent), "Splitter must be located inside a SplitterPanel");
        }
        base.OnInitialized();
        Parent.AddPanel(this);
    }
}
